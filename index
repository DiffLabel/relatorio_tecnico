  <script>
    document.getElementById("data").value = new Date().toLocaleDateString();

    const bobinas = document.querySelectorAll(".bobina");
    const inputSentido = document.getElementById("sentido");

    bobinas.forEach(b => {
      b.addEventListener("click", () => {
        bobinas.forEach(el => el.classList.remove("selected"));
        b.classList.add("selected");
        inputSentido.value = b.getAttribute("data-sentido");
      });
    });

    document.getElementById("formulario").addEventListener("submit", function(e) {
      e.preventDefault();

      const cliente = document.getElementById("cliente").value;
      const arquivo = document.getElementById("arquivo").files[0];
      const data = document.getElementById("data").value;
      const sentido = inputSentido.value;
      const material = document.getElementById("material").value;
      const acabamento = document.getElementById("acabamento").value;
      const nomeProjeto = arquivo.name.replace(/\.[^/.]+$/, "");

      const preview = `
        <h3>Resumo do Relatório</h3>
        <p><strong>Cliente:</strong> ${cliente}</p>
        <p><strong>Projeto:</strong> ${nomeProjeto}</p>
        <p><strong>Data:</strong> ${data}</p>
        <p><strong>Sentido da Bobina:</strong> ${sentido}</p>
        <p><strong>Material:</strong> ${material}</p>
        <p><strong>Acabamento:</strong> ${acabamento}</p>
        <p class="linha-corte">CORTE: 150 mm x 150 mm (linha Magenta 100%)</p>
        <p><strong>Arquivo:</strong> ${arquivo.name}</p>
      `;
      document.getElementById("preview").innerHTML = preview;
    });
  </script>
