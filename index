    <form id="formulario">
      <label>Nome do Cliente:</label>
      <input type="text" id="cliente" required>

      <label>Upload da Arte (PDF ou imagem):</label>
      <input type="file" id="arquivo" accept=".pdf,image/*" required>

      <label>Data:</label>
      <input type="text" id="data" readonly>

      <label>Sentido de Desbobinamento:</label>
      <div class="bobina-opcoes">
